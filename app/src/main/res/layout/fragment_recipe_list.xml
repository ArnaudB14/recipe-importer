<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_paper_tiled"
    android:padding="0dp">

    <!-- Header "note" -->
    <LinearLayout
        android:id="@+id/headerNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/sketch_border_box"
        android:padding="14dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recettes sauvegardÃ©es"
            android:textColor="@color/sk_text"
            android:textSize="26sp"
            android:textStyle="bold"
            android:fontFamily="@font/caveat_regular"/>

        <TextView
            android:id="@+id/list_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Glissez une recette Ã  gauche/droite pour la supprimer."
            android:textColor="@color/sk_text_muted"
            android:textSize="14sp"
            android:fontFamily="@font/architects_daughter_regular"/>
    </LinearLayout>

    <!-- Liste -->
    <LinearLayout
        android:id="@+id/listContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/sketch_border_dashed"
        android:padding="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/headerNote"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <!-- ðŸ” Barre de recherche -->
        <LinearLayout
            android:id="@+id/searchContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sketch_border_box"
            android:padding="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_search_sketch"
                android:tint="@color/sk_text"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/searchInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Rechercher une recetteâ€¦"
                android:textColor="@color/sk_text"
                android:textColorHint="@color/sk_text_muted"
                android:textSize="16sp"
                android:fontFamily="@font/architects_daughter_regular"
                android:singleLine="true"
                android:imeOptions="actionSearch"/>
        </LinearLayout>

        <TextView
            android:id="@+id/favFilterChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="â­ Favoris"
            android:textColor="@color/sk_text"
            android:fontFamily="@font/architects_daughter_regular"
            android:background="@drawable/sketch_tag"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"/>


        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/activeTagFilters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            app:flexWrap="wrap"
            app:justifyContent="flex_start"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"/>


        <!-- ðŸ“œ Liste -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recipe_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="6dp"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_recipe_card"/>

    </LinearLayout>

    <!-- Empty state "post-it / note" -->
    <LinearLayout
        android:id="@+id/emptyCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@drawable/sketch_border_box"
        android:padding="12dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/headerNote"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.2">

        <TextView
            android:id="@+id/empty_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aucune recette pour le moment"
            android:textColor="@color/sk_text"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="@font/caveat_regular"/>

        <TextView
            android:id="@+id/empty_list_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Partagez un lien TikTok pour analyser et enregistrer une recette."
            android:textColor="@color/sk_text_muted"
            android:textSize="15sp"
            android:gravity="center"
            android:fontFamily="@font/architects_daughter_regular"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
