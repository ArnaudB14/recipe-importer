<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F7FB"
    android:fillViewport="true"
    tools:context=".ui.detail.RecipeDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- HEADER CARD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/headerCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="#FFFFFF">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <EditText
                    android:id="@+id/recipe_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Titre de la recette"
                    android:importantForAutofill="no"
                    android:inputType="textCapSentences"
                    android:paddingTop="2dp"
                    android:paddingBottom="6dp"
                    android:textColor="#111827"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Buns poulet curry (Titre personnalisé)" />

                <!-- ✅ Description éditable -->
                <EditText
                    android:id="@+id/video_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#F3F4F6"
                    android:padding="12dp"
                    android:textColor="#111827"
                    android:hint="Description"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp"
                    android:inputType="textMultiLine|textCapSentences"
                    android:gravity="top"
                    android:minLines="2"
                    android:maxLines="6"
                    android:overScrollMode="ifContentScrolls"
                    android:scrollbars="vertical"
                    app:layout_constraintTop_toBottomOf="@id/recipe_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Buns poulet curry — macros, ingrédients, etc." />

                <!-- petite ligne de séparation -->
                <View
                    android:id="@+id/divider1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="#E5E7EB"
                    app:layout_constraintTop_toBottomOf="@id/video_description"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <Button
                    android:id="@+id/openTikTokButton"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="12dp"
                    android:text="Ouvrir sur TikTok"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:backgroundTint="#111827"
                    android:textColor="#FFFFFF"
                    app:layout_constraintTop_toBottomOf="@id/divider1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- INGREDIENTS CARD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/ingredientsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/headerCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="#FFFFFF">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/ingredients_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Ingrédients"
                    android:textColor="#111827"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- ✅ Ingrédients éditables -->
                <EditText
                    android:id="@+id/ingredientsContent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#F3F4F6"
                    android:padding="12dp"
                    android:textColor="#111827"
                    android:hint="Liste des ingrédients"
                    android:textSize="14sp"
                    android:lineSpacingExtra="3dp"
                    android:inputType="textMultiLine|textCapSentences"
                    android:gravity="top"
                    android:minLines="6"
                    android:maxLines="12"
                    android:overScrollMode="ifContentScrolls"
                    android:scrollbars="vertical"
                    app:layout_constraintTop_toBottomOf="@id/ingredients_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="- Cheddar : 25g\n- Farine : 60g\n- Skyr : 60g\n- Levure : 2,5g\n- Poulet : 75g\n- Curry\n- Crème 4% : 25g" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- INSTRUCTIONS CARD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/instructionsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/ingredientsCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="#FFFFFF">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/instructions_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Instructions"
                    android:textColor="#111827"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- ✅ Instructions éditables -->
                <EditText
                    android:id="@+id/instructionsContent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#F3F4F6"
                    android:padding="12dp"
                    android:textColor="#111827"
                    android:hint="Étapes de préparation"
                    android:textSize="14sp"
                    android:lineSpacingExtra="3dp"
                    android:inputType="textMultiLine|textCapSentences"
                    android:gravity="top"
                    android:minLines="8"
                    android:maxLines="16"
                    android:overScrollMode="ifContentScrolls"
                    android:scrollbars="vertical"
                    app:layout_constraintTop_toBottomOf="@id/instructions_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="1. Mélanger farine, skyr et levure.\n2. Former le bun et cuire.\n3. Préparer le poulet curry.\n4. Garnir et servir." />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
