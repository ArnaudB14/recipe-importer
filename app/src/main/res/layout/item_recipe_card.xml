<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="@drawable/sketch_border_box"
    android:padding="14dp"
    android:orientation="vertical">

    <!-- Ligne du haut : titre + (optionnel) icône -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/recipe_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Titre de la recette sauvegardée"
            android:textColor="@color/sk_text"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="@font/caveat_regular"
            android:maxLines="2"
            android:lineSpacingMultiplier="0.8"
            android:ellipsize="end" />

        <ImageView
            android:id="@+id/fav_icon"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_star_outline"
            android:contentDescription="Favori"
            app:tint="@null"/>
    </LinearLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/tagContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:flexWrap="wrap"
        app:justifyContent="flex_start" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/metaBadgesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:flexWrap="wrap"
        app:justifyContent="flex_start"/>

    <!-- Petite ligne "griffonnée" -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/sketch_divider" />

    <TextView
        android:id="@+id/recipe_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date : 14/12/2025"
        android:textColor="@color/sk_text_muted"
        android:textSize="13sp"
        android:fontFamily="@font/architects_daughter_regular" />

</LinearLayout>
