<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Cadre 1 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00FFFFFF" />
            <corners android:radius="16dp" />
            <stroke
                android:width="2dp"
                android:color="#2B2B2B" />
        </shape>
    </item>

    <!-- Cadre 2 (légèrement inset pour faire un double trait irrégulier) -->
    <item android:left="2dp" android:top="1dp" android:right="1dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#00FFFFFF" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="#2B2B2B" />
        </shape>
    </item>

</layer-list>
